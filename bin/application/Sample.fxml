            <TextField fx:id="serverNameTField" layoutX="198.0" layoutY="16.0" promptText="Server Name" />
            <TextField fx:id="serverAddrTField" layoutX="198.0" layoutY="55.0" promptText="IP-Adresse" />
            <Button fx:id="saveServerBtn" layoutX="278.0" layoutY="90.0" mnemonicParsing="false" onAction="#saveServerEntry" text="Speichern" />
            <Button fx:id="cancelServerBtn" layoutX="198.0" layoutY="90.0" mnemonicParsing="false" text="Abbrechen" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
