<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <bottom>
      <AnchorPane prefHeight="166.0" prefWidth="405.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="portNameTField" layoutX="26.0" layoutY="14.0" promptText="Port Name" />
